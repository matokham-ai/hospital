APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting Configuration
# Set to 'null' (DEFAULT) to disable WebSocket features - recommended for most deployments
# Set to 'pusher' to enable real-time notifications via Pusher
# Set to 'reverb' to enable real-time notifications via Laravel Reverb (self-hosted)
BROADCAST_CONNECTION=null

# Pusher Configuration (for real-time features via Pusher)
# Only required if BROADCAST_CONNECTION=pusher
# Get credentials from https://pusher.com
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Laravel Reverb Configuration (for self-hosted real-time features)
# Only required if BROADCAST_CONNECTION=reverb
# See https://laravel.com/docs/reverb for setup instructions
REVERB_APP_ID=
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_SERVER_HOST=localhost
REVERB_SERVER_PORT=8080
REVERB_SCHEME=http
VITE_REVERB_HOST=${REVERB_SERVER_HOST}
VITE_REVERB_PORT=${REVERB_SERVER_PORT}
VITE_REVERB_SCHEME=${REVERB_SCHEME}

FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Node.js Memory Optimization for Build Process
NODE_OPTIONS="--max-old-space-size=4096 --max-semi-space-size=128"
